@model IEnumerable<Movie>   // Actionmethodilta tulee IEnumerable<Movie> & nyt näkymä tietää sen

@{
}

<partial name="_Notification" />

<div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h1 class="text-primary">Movies</h1>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new movie
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Movie</th>
                <th>My rating</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.Rating</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
